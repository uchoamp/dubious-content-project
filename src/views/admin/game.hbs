{{> admin/header}}

<form action="/admin/game" method="post">
    <main class="estatic-zoom  separete">

        <section class="container">

            <div class="img">
                <h1>{{game.tittle}}</h1>
                <img src="https://image.tmdb.org/t/p/w342/8LHNnMA9xP6sUhkma0aOv5RWtzo.jpg" alt="">
                <div>
                    <a class="btn-down" href="#"><i class="fa fa-download"></i> DOWNLOAD <span>300MB</span></a>
                </div>
            </div>
            <div class="info-desc-imgs-comments">
                <div class="info-desc">
                    <section class="info">
                        <fieldset>
                            <legend>Informações</legend>
                            <div class="label-input-inline">
                                <label for="tittle">Tittle: <br><span class="form-vali"></span></label>
                                <input type="text" name="tittle" placeholder="Tittle" value="" required>
                            </div>
                            <div class="label-input-inline">
                                <label for="type">Type: <br><span class="form-vali"></span></label>
                                <input type="text" name="type" placeholder="Type" value="" required>
                            </div>
                            <div class="label-input-inline">
                                <label for="lingue">Language: <br><span class="form-vali"></span></label>
                                <input type="text" name="Language" placeholder="Language" value="" required>
                            </div>
                            <div class="label-input-inline">
                                <label for="censorship">Censorship: <br><span class="form-vali"></span></label>
                                <input type="text" name="censorship" placeholder="Censorship" value="" required>
                            </div>
                            <div class="label-input-inline">
                                <label for="release_date">Release Date: <br><span class="form-vali"></span></label>
                                <input type="date" name="release_date" value="" required>
                            </div>
                            <div class="label-input-inline">
                                <label for="size">Size: <br><span class="form-vali"></span></label>
                                <input type="text" name="size" placeholder="1100MB, 1.1GB..." value="" required>
                            </div>
                            <div class="label-input-inline">
                                <label for="tags">Tags: <br><span class="form-vali"></span></label>
                                <input type="text" name="tags" placeholder="tag, tag, tag..." value="" required>
                            </div>
                            <div class="label-input-inline">
                                <label for="paltform">Platform: <br><span class="form-vali"></span></label>
                                <input type="text" name="paltform" placeholder="Windows, Android..." value="" required>
                            </div>

                        </fieldset>
                    </section>
                    <section class="desc">
                        <fieldset>
                            <legend>Sinopse</legend>

                            <textarea name="description" placeholder="Description..." rows="13"></textarea>

                        </fieldset>
                    </section>
                </div>

                <div class="imgs-others">
                    <h1>Screnshorts</h1>
                    <div class="row-imgs">
                        <div class="column-imgs">
                            <img class="hover-shadow cursor screenshort" src="/img/main/screenshort-sqn.png" alt="">
                        </div>

                    </div>
                    <div id="myModal" class="modal">
                        <span class="close" onclick="closeModal()">&times;</span>
                        <div id="modal-content">
                            <img src="" id="modalImage" alt="">
                        </div>
                    </div>
                    <div class="input-sc">
                        <input type="file" name="screenshort" class="screenshort" accept="image/png, image/jpeg">
                      
                    </div>

                </div>
        </section>
        <div>
            <input type="submit" value="CRIAR NOVO GAME">
        </div>
    </main>
</form>


<script src="/javascript/admin.js"></script>